{
    "template": "polskatimes*",
	"settings": {
		"index": {
			"analysis": {
				"char_filter": {
                    "polish_special_letters_mapping": {
                        "type": "mapping",
                        "mappings": [
                            "ą => a",
                            "ć => c",
                            "ę => e",
                            "ł => l",
                            "ń => n",
                            "ó => o",
                            "ś => s",
                            "ź => z",
                            "ż => z"
                        ]
                    }
                },
				"filter": {
                    "polish_stop": {
            			"type": "stop",
            			"stopwords_path": "analysis/polish.stopwords.txt"
        			}
				},
				"analyzer": {
                    "polish_stemmer_without_tags": {
                    	"tokenizer": "standard",
                    	"filter": ["lowercase", "polish_stem", "unique", "polish_stop"],
                    	"char_filter":["polish_special_letters_mapping"]
                    },
                    "polish_morfologic_without_tags": {
                        "tokenizer": "standard",
                        "filter": ["lowercase", "morfologik_stem", "unique", "polish_stop"],
                        "char_filter":["polish_special_letters_mapping"]
                    }
				}
			}
		}
	},
    "mappings": {
        "material": {
            "properties": {
                "content": { 
                    "type": "string", 
                    "fields": {
                        "polish_stempel": {
                            "type": "string",
                            "analyzer": "polish_stemmer_without_tags"
                        }
                    } 
                }
            }
        }
    }
}